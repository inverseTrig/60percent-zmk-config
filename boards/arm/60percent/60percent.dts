/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>
#include <dt-bindings/zmk/matrix_transform.h>

/ {
    model = "60percent";
    compatible = "ent,60percent";

    chosen {
        zephyr,code-partition = &code_partition;
        zephyr,sram = &sram0;
        zephyr,flash = &flash0;
        zmk,kscan = &kscan;
        zmk,matrix_transform = &ortho_transform;
        zmk,battery = &vbatt;
        zephyr,console = &cdc_acm_uart0;
    };

    aliases {
        led0 = &green_led;
        led1 = &blue_led;
    };

    leds {
        compatible = "gpio-leds";
        green_led: led0 {
            gpios = <&gpio0 26 GPIO_ACTIVE_HIGH>;
            label = "Green LED";
        };
        blue_led: led_1 {
            gpios = <&gpio0 12 GPIO_ACTIVE_HIGH>;
            label = "Blue LED";
        };
    };

    vbatt: vbatt {
        compatible = "zmk,battery-voltage-divider";
        label = "BATTERY";
        io-channels = <&adc 6>;
        output-ohms = <100000>;
        full-ohms = <(100000 + 100000)>;
    };

    ortho_transform: ortho_transform {
        compatible = "zmk,matrix-transform";
        rows = <8>;
        columns = <8>;

        map = <
            RC(1, 0)  RC(0, 0)  RC(0, 1)  RC(0, 2)  RC(1, 2) RC(2, 2)  RC(0, 3)  RC(0, 4)  RC(1, 4)  RC(0, 5)  RC(1, 5)  RC(0, 6)  RC(1, 6) RC(0, 7)  RC(1, 7)
            RC(2, 0)   RC(3, 0)  RC(1, 1)  RC(2, 1)  RC(3, 2)  RC(1, 3)  RC(2, 3)  RC(3, 4)  RC(2, 4)  RC(3, 5) RC(2, 5)  RC(3, 6)  RC(2, 6)          RC(2, 7)
            RC(5, 0)    RC(4, 0)  RC(4, 1)  RC(3, 1)  RC(4, 2)  RC(4, 3)  RC(3, 3)  RC(4, 4)  RC(5, 4)  RC(4, 5) RC(5, 5)  RC(4, 6)                   RC(3, 7)
            RC(6, 0)     RC(5, 1)  RC(6, 1)  RC(5, 2)  RC(6, 2)  RC(5, 3)  RC(6, 3)  RC(7, 4)  RC(6, 4)  RC(7, 5)  RC(6, 5)  RC(5, 6)                 RC(4, 7)
                  RC(7, 0)     RC(7, 1)                             RC(7, 3)                                            RC(6, 6)      RC(5, 7)
        >;
    };

    kscan: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";

        diode-direction = "col2row";

        col-gpios
            = <&gpio0 7 (GPIO_ACTIVE_HIGH)>
            , <&gpio0 27 (GPIO_ACTIVE_HIGH)>
            , <&gpio1 15 (GPIO_ACTIVE_HIGH)>
            , <&gpio1 13 (GPIO_ACTIVE_HIGH)>
            , <&gpio1 14 (GPIO_ACTIVE_HIGH)>
            , <&gpio1 10 (GPIO_ACTIVE_HIGH)>
            , <&gpio1 12 (GPIO_ACTIVE_HIGH)>
            , <&gpio1 11 (GPIO_ACTIVE_HIGH)>
            ;

        row-gpios
            = <&gpio0 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 28 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 29 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 13 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 15 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            ;
    };
};

&adc {
    status = "okay";
};

&gpiote {
    status = "okay";
};

&gpio0 {
    status = "okay";
};

&gpio1 {
    status = "okay";
};

&usbd {
    status = "okay";
    cdc_acm_uart0: cdc_acm_uart0 {
        compatible = "zephyr,cdc-acm-uart";
        label = "CDC_ACM_0";
    };
}; 

&flash0 {
    /*
     * For more information, see:
     * http://docs.zephyrproject.org/latest/devices/dts/flash_partitions.html
     */
    partitions {
        compatible = "fixed-partitions";
        #address-cells = <1>;
        #size-cells = <1>;

        sd_partition: partition@0 {
            label = "mbr";
            reg = <0x00000000 0x00001000>;
        };
        code_partition: partition@1000 {
            label = "code_partition";
            reg = <0x00001000 0x000d3000>;
        };

        storage_partition: partition@d4000 {
            label = "storage";
            reg = <0x000d4000 0x00020000>;
        };

        boot_partition: partition@f4000 {
            label = "adafruit_boot";
            reg = <0x000f4000 0x0000c000>;
        };
    };
};
